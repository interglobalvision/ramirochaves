$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 12px
$font-size-extra = 48px
$font-size-large = 36px
$font-size-mid = 24px
$font-size-small = 18px
$font-size-tiny = 8px

grid-maker(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, $font-size-extra, $font-size-large, $font-size-mid, $font-size-small, $font-size-tiny)

html,
body
  margin: 0
  height: 100%
  overflow: hidden

body
  cursor: none
  &.loading
    #cursor-loading
      visibility: visible
    #cursor-brush
      visibility: hidden

.cursor
  pointer-events: none
  position: fixed
  top: -9999px
  left: -9999px
  z-index: 500

#cursor-loading
  visibility: hidden
  width: 50px
  height: 50px
  animation: fullRotate 1s linear infinite
  transform-origin: center

@keyframes fullRotate
  0%
    transform: rotate(0deg)
  50%
    transform: rotate(180deg)
  100%
    transform: rotate(360deg)

#cursor-brush
  visibility: visible
  width: 100px
  height: 100px

#header
  position: absolute
  top: 0
  left: 0
  height: 100vh
  width: 100vw
  display: flex
  flex-direction: column
  justify-content: center
  text-align: center
  pointer-events: none

canvas
  position: absolute
  top: 0
  left: 0
  width: 100vw
  height: 100vh

#footer
  position: fixed
  bottom: 0
  left: 0
  width: 100vw
  cursor: default
  a
    cursor: pointer
